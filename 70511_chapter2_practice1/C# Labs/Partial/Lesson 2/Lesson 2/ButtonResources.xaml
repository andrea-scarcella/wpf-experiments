<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="ButtonBackgroundBrush">
        <GradientStop Color="Yellow" Offset="0"></GradientStop>
        <GradientStop Color="Red" Offset="1"></GradientStop>

    </LinearGradientBrush>
    <SolidColorBrush Color="Purple" x:Key="ButtonForegroundBrush"></SolidColorBrush>
    <SolidColorBrush Color="LimeGreen" x:Key="ButtonBorderBrush"></SolidColorBrush>
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrush}"></Setter>
    </Style>
</ResourceDictionary>