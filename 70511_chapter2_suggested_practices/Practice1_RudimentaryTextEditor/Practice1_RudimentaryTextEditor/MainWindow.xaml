<Window x:Class="Practice1_RudimentaryTextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rudimentary Text Editor (c)" Height="350" Width="525">

    <DockPanel LastChildFill="True">
        <ToolBar Name="tlb1" DockPanel.Dock="Top">
            <Button Name="cutb" Command="Cut">Cut</Button>
            <Button Name="copyb" Command="Copy">Copy</Button>
            <Button Name="pasteb" Command="Paste">Paste</Button>
        </ToolBar>
        <StatusBar Name="stb1" DockPanel.Dock="Bottom">sb</StatusBar>
        <TextBox Name="txb1" >tb</TextBox>
    </DockPanel>


</Window>
