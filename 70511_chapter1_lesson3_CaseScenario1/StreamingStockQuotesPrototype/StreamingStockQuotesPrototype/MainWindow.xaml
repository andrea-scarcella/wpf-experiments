<Window x:Class="StreamingStockQuotesPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <DockPanel  x:Name="dp" LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <Label Height="64" Width="256">Toolbar contents</Label>
        </ToolBar>

        <StatusBar DockPanel.Dock="Bottom">
            <Label Height="64" Width="256">Stock Quote Picker</Label>
        </StatusBar>
        <Label Height="200" Width="200">Chart control</Label>
    </DockPanel>
</Window>
